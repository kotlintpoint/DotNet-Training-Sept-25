@model List<Category>

<h1 class="display-4">Category</h1>    
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Display Order</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>              
        }
    </tbody>
</table>
