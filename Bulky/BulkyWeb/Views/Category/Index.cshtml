@model List<Category>


<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>            
        </div>
        <div class="col-6 text-end">
            <i class="bi bi-plus-circle"></i>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create Category</a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Display Order</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
            </tr>              
        }
    </tbody>
</table>
