@model List<Product>

<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>            
        </div>
        <div class="col-6 text-end">
            <i class="bi bi-plus-circle"></i>
            <a class="btn btn-primary" asp-controller="Product" asp-action="Upsert">Create Product</a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Title</td>
            <td>Author</td>
            <td>ISBN</td>
            <td>List Price</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Author</td>
                <td>@product.ISBN</td>
                <td>@product.ListPrice</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>              
        }
    </tbody>
</table>
