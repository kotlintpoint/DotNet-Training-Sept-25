@model ProductVM

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Title"></label>
            <input asp-for="@Model.Product.Title" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Description"></label>
            <input asp-for="@Model.Product.Description" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">            
            <label asp-for="@Model.Product.CategoryId"></label>
            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                <option disabled selected>--Select Category--</option>
            </select>            
            <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Author"></label>
            <input asp-for="@Model.Product.Author" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.ISBN"></label>
            <input asp-for="@Model.Product.ISBN" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.ListPrice"></label>
            <input asp-for="@Model.Product.ListPrice" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Price"></label>
            <input asp-for="@Model.Product.Price" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Price50"></label>
            <input asp-for="@Model.Product.Price50" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Price50" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Product.Price100"></label>
            <input asp-for="@Model.Product.Price100" type="text" class="form-control" />
            <span asp-validation-for="@Model.Product.Price100" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="col-6">
                <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}