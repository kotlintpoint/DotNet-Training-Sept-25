@model List<Category>

<div class="container">
    <div class="row pt-4 pb-23">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>            
        </div>
        <div class="col-6 text-end">
            <i class="bi bi-plus-circle"></i>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create Category</a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Display Order</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-fill"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>              
        }
    </tbody>
</table>
